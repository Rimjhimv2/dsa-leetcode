class Solution {
public:
    int equalSubstring(string s, string t, int maxCost) {
        int i =0;
        int j =0;
        int currCost = 0;
        int maxLen=0;
        int n = s.size();

        while(j<n){
            currCost+= abs(s[j]-t[j]);
             while(currCost>maxCost){
                currCost-= abs(s[i]-t[i]);
                i++;

                

             }
             maxLen = max(maxLen, j - i + 1);
             j++;



        }

return maxLen;

    }
};